<table class="Clerks">
  <h3>
    <th colspan="6" class="Header-table"><%= title %></th>
  </h3>
  <tr>
    <th>Id</th><th>Name</th><th>Email</th><th>No.of orders</th><th>Orders</th><th>Edit</th>
  </tr>
  <% type.each do |type| %>
      <tr>
        <td><%= type.id %></td><td><%= type.name %></td><td><%= type.email %></td><td> <%=type.orders.delivered.count%></td>
        <td>
          <% type.orders.delivered.ids.each do |id| %>
            <%= link_to id, "orders/#{id}" %>,
          <% end %>
        </td>
        <%if title == "Clerks"%>
          <td>
            <%= link_to "Make-User", clerk_update_path(id: type.id), :method => :post %>
          </td>
        <%elsif title == "Customers"%>
          <td>
            <%= link_to "Make-Clerk", clerk_update_path(id: type.id), :method => :post %>
          </td>
        <%else%>
          <td>
            None
          </td>
        <%end%>
      </tr>
  <% end %>
</table>
