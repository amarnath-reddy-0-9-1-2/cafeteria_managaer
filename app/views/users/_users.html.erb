
<h3>
  <th colspan="6" class="Header-table"><%= title %></th>
</h3>
<tr>
  <th>Id</th><th>Name</th><th>Email</th><th>No.of orders</th><th>Orders</th><th>Edit</th>
</tr>
<% if owner %>
  <tr class="User-list" id=<%= owner.id %>>
    <td><%= owner.id %></td><td><%= owner.name %></td><td><%= owner.email %></td><td> <%=owner.orders.delivered.count%></td>
    <td>
      <% owner.orders.delivered.ids.each do |id| %>
       <%= link_to id, "orders/#{id}" %>,
      <% end %>
    </td>
    <td>None</td>
  </tr>
<% else type %>
  <% type.each do |type| %>
    <tr class="User-list" id=<%= type.id %>>
      <td><%= type.id %></td><td><%= type.name %></td><td><%= type.email %></td><td> <%=type.orders.delivered.count%></td>
      <td>
        <% type.orders.delivered.ids.each do |id| %>
          <%= link_to id, "orders/#{id}" %>,
        <% end %>
      </td>
      <%if @current_user.is_owner? && title == "Clerks"%>
        <td>
          <%= image_tag "trash.png" %>
          <%= link_to "delete", clerk_update_path(id: type.id), :method => :post %>
        </td>
      <%else%>
        <td>
          None
        </td>
      <%end%>
    </tr>
  <% end %>
<% end %>
