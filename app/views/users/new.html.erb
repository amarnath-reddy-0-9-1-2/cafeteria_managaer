<main class="SignUp-page">
  <h2 class="Sign-heading">Sign up Here!</h2>
  <%= form_with url: users_path, class: "SignUp-content" do |form| %>
    <%= form.text_field :name,
                         placeholder: "Name",
                         autofocus:"autofocus"
    %>
    <br>
    <%= form.email_field :email,
                          placeholder: "Email",
                          autofocus:"autofocus"
    %>
    <br>
    <%= form.password_field :password,
                             placeholder: "Password",
                             autofocus:"autofocus"
    %>
     <br>
      <%= form.password_field :password_confirmation,
                             placeholder: "Conifrm Password",
                             autofocus: true
    %>
    <br>
    <%= form.submit "Sign up", class: "SignUp-button"%>
    <p class="Get-in">
      Existing User!
      <%= link_to "Login here", new_session_path, class:"Login-direct" %>
    </p>
  <%end%>
</main>
