<main class="SignUp-page">
  <%= form_with url: session_path, class: "SignUp-content" do |f| %>

    <%= f.email_field :email,
                         placeholder: "Email",
                         autofocus:"autofocus"
      %>
    <br>
    <%= f.password_field :password,
                            placeholder: "Password",
                            autofocus:"autofocus"
      %>
    <br>
    <%= f.submit "Log in",data: { "disable-with": "Logging in..." } , class: "Login-button" %>
       <p class="Get-in">
         New User!
      <%= link_to "Sign Up here", new_user_path, class: "SignUp-link" %>
    </p>
  <% end %>
</main>
</main>
