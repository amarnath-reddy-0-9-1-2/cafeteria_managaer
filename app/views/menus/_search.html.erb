
<% content_for :head do %>
  <div class="search">
    <form>
      <input type="search" placeholder="Search here" class="Search-box">
      <input type="submit" value="Search" class="Search-button">
    </form>
  </div>
  <% if @current_user.is_owner? %>
    <div class="Add-item" id="Add-item-form">
      <%= form_with(model: @menu, url: menu_items_url, method: "post", local: true) do |form|%>
        <%= form.text_field :name, placeholder:"Item name" %>
        <%= form.number_field :price, placeholder:"Item price", in:1..10000 %>
        <%= form.text_field :description, placeholder:"Description of item" %>
        <%= form.text_field :menu_name, placeholder:"Menu name" %>
        <%= form.submit data: { "disable-with": "ok" } %>
      <% end %>
    </div>
  <% end %>
<% end %>
