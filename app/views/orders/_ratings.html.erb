<p class="Rating">
  <% if mark_as_delivered %>
    <%= link_to "Mark as Delivered", order_path(order.id), method: "patch" %>
  <% elsif order.delivered_at.nil? %>
    Order under preperation
  <% else %>
    <% if order.ratings == 0 && order.user == @current_user %>
      <% 5.times do |img| %>
        <%= link_to order_rating_path(id: order.id , rating: img+1), method: :put, class:"Rating-stars" do %>
          <%= image_tag "stars.png" , id:img+1 %>
        <% end %>
      <% end %>
    <% else %>
      <% order.ratings.times do %>
        <%= image_tag "starsfull.png" %>
      <% end %>
      <% (5-order.ratings).times do %>
        <%= image_tag "stars.png" %>
      <% end %>
    <% end %>
  <%end%>
</p>
